<% @events.each do |event| %>
<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
              <a href="/events/<%= event.id %>"><%=event.event_name %></a>
            </h2>
            <hr>
        </div>
        <div class="col-md-6">
            <img class="img-responsive img-border-left" src="public/img/slide-2.jpg" alt="">
        </div>
        <div class="col-md-6">
            <p>Hosted by <%=User.find(event.host_id).first_name %>.</p>
            <p>Happening in <%= event.city %>. </p>
        </div>
        <div class="clearfix"></div>
    </div>
</div>

<% end %>
