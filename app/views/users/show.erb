<div class="container">
	<div class="row">
			<div class="box">
					<div class="col-lg-12">
							<hr>
							<h2 class="intro-text text-center"><%=@user.first_name%>'s Events
							</h2>
							<hr>
					</div>

					<% @user.events.each do |event| %>
						<div class="col-sm-4 text-center">
							<iframe
							  width="80%"
							  height="260"
							  frameborder="0" style="border:0"
							  src="https://www.google.com/maps/embed/v1/search?key=<%=MAP_KEY%>&q=<%=event.street%>+<%=event.city%>+<%=event.state%>+<%=event.postcode%>" allowfullscreen>
							</iframe>
							<!-- <img class="img-responsive" src="http://placehold.it/750x450" alt=""> -->
							<h3><a href="/events/<%=event.id%>"><%= event.event_name %></a>
								<br><small> on <%= event.start_time%></small>
							</h3>
							<form class="col-sm-6" action="/users/<%=current_user.id%>/events/<%=event.id%>" method="get">
								<input type="submit" value="EDIT">
							</form>

							<form class="col-sm-6" action="/users/<%=current_user.id%>/events/<%=event.id%>" method="post">
								<input type="hidden" name="_method" value="delete">
								<input type="submit" value="DELETE">
							</form>
						</div>
					<% end %>
					<div class="clearfix"></div>
			</div>
	</div>

</div>
