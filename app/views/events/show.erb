<div class="container">
	<h3><%= @event.event_name %></h3>

	<ul>
		<li><%= @event.event_description %></li>
<% if session[:user_id] %>

		<br><br>Here are the details:<br>
		<li><%= @event.street %></li>
		<li><%= @event.city %></li>

		<br><br>Make sure to get there by:<br>
		<li><%= @event.start_time %></li>
	</ul>

	<p>
		<form action="/users/<%=session[:user_id]%>/event/<%= @event.id %>" method="post">
		  <input type="hidden" name="_method" value="put">
		  <input type="submit" value="Join the event!">
		</form>
	</p>


	<div id="map">
		<iframe
		  width="414"	
		  height="350"
		  frameborder="0" style="border:0"
		  src="https://www.google.com/maps/embed/v1/earch?key=AIzaSyBLHT1oNn13P8RgHDnfG_ftrEztyaLI5wo&q=<%=@event.street%>+<%=@event.city%>+<%=@event.state%>+<%=@event.postcode%>" allowfullscreen>
		</iframe>
	</div>
</div>

<% else %>
	</ul>
	<br>
	<p>Log in to see details of this event.</p>

	<div id="map">
		<iframe
		width="414"	
		height="350"
		frameborder="0" style="border:0"
		src="https://www.google.com/maps/embed/v1/search?key=AIzaSyBLHT1oNn13P8RgHDnfG_ftrEztyaLI5wo&q=<%= @event.city%>+<%=@event.state%>" allowfullscreen>
		<iframe>
	</div>
	<% end %>
</div