<div class="container">
	<p> <%= @error %> </p>
	<h3><%= @event.event_name %></h3>

	<ul>
		<li><%= @event.event_description %></li>

<% if current_user %>

		<br><br>Here are the details:<br>
		<li><%= @event.street %> </li><br>
		<li><%= @event.city %></li>

		<br><br>Make sure to get there by:<br>
		<li><%= @event.start_time %></li>
	</ul>
	<p>The current guest list:</p>
	<ul>
		<% @guestlist.each do |g| %>
		<li> <%= g.user.first_name %> <%= g.user.last_name %> </li><br>
		<% end %>
	</ul> 


	<% if !@on_guestlist %>
	<p>
		<form action="/users/<%=current_user.id%>/events/<%= @event.id %>/guests" method="post">
		  <input type="submit" value="Join the event!">
		</form>
	</p>
	<% end %>

	
	<br>
	<div id="map">
		<iframe
		  width="100%"	
		  height="260"
		  frameborder="0" style="border:0"
		  src="https://www.google.com/maps/embed/v1/search?key=<%=MAP_KEY%>&q=<%=@event.street%>+<%=@event.city%>+<%=@event.state%>+<%=@event.postcode%>" allowfullscreen>
		</iframe>
	</div>
</div>

<% else %>
	</ul>
	<br>
	<p><a href="/sessions/new">Log in to see details of this event.</a></p>

	<div id="map">
		<iframe
		width="100%"	
		height="260"
		frameborder="0" style="border:0"
		src="https://www.google.com/maps/embed/v1/search?key=<%=MAP_KEY%>&q=<%= @event.city%>+<%=@event.state%>" allowfullscreen>
		<iframe>
	</div>
<% end %>
</div